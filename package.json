{
	"name": "@0xernesto/react-widget-example",
	"version": "1.1.0",
	"description": "Example React widget library published as @0xernesto/react-widget-example.",
	"files": [
		"dist"
	],
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "NODE_ENV=production rollup -c",
		"clean": "rimraf dist",
		"commit": "git-cz",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
		"prebuild": "npm run clean",
		"prepare": "husky install",
		"release": "semantic-release --branches main",
		"test": "jest --coverage",
		"test:match": "jest --verbose"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"author": "Ernesto Ramirez",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/0xernesto/react-widget-example.git"
	},
	"homepage": "https://github.com/0xernesto/react-widget-example",
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@rollup/plugin-commonjs": "^25.0.3",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@rollup/plugin-typescript": "^11.1.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/react": "^14.0.0",
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.2",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"autoprefixer": "^10.4.14",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.45.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-react": "^7.33.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"husky": "^8.0.3",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.6.1",
		"jest-environment-jsdom": "^29.6.1",
		"postcss": "^8.4.26",
		"prettier": "^3.0.0",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rollup": "^3.26.3",
		"rollup-plugin-dts": "^5.3.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^4.0.2",
		"semantic-release": "^21.0.7",
		"tailwindcss": "^3.3.3",
		"ts-jest": "^29.1.1",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
